// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum BookingStatus {
  DRAFT
  RESERVED
  CONFIRMED
  COMPLETED
  DISPUTED
  CANCELLED
}

enum ChecklistPhase {
  PICKUP
  RETURN
}

enum DisputeType {
  DAMAGE
  PAYMENT
  OTHER
}

enum DisputeStatus {
  OPEN
  IN_REVIEW
  RESOLVED_OWNER
  RESOLVED_RENTER
  REFUND_PARTIAL
}

enum ListingStatus {
  PENDING
  APPROVED
  REJECTED
  PAUSED
}

model User {
  id         String   @id @default(cuid())
  name       String?
  email      String   @unique
  phone      String?
  image      String?
  avatar     String? // Keep for backward compatibility
  bio        String?
  roles      String   @default("[\"USER\"]") // JSON array of Role enum values
  trustScore Float    @default(0)
  isVerified Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  listingsAsOwner  Listing[] @relation("ListingOwner")
  bookingsAsRenter Booking[] @relation("BookingRenter")
  messagesSent     Message[] @relation("MessageFrom")
  reviewsGiven     Review[]  @relation("ReviewFrom")
  reviewsReceived  Review[]  @relation("ReviewTo")
  disputesOpened   Dispute[] @relation("DisputeOpener")
  accounts         Account[]
  sessions         Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Listing {
  id           String        @id @default(cuid())
  ownerId      String
  title        String
  description  String?
  category     String
  pricePerDay  Int
  deposit      Int?
  status       ListingStatus @default(PENDING)
  photos       String // JSON array of photo URLs
  locationText String?
  lat          Float?
  lng          Float?
  instantBook  Boolean       @default(false)
  ratingAvg    Float         @default(0)
  ratingCount  Int           @default(0)
  availability String? // JSON string for availability calendar
  trustWeight  Float         @default(0)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  owner    User      @relation("ListingOwner", fields: [ownerId], references: [id])
  bookings Booking[]
  reviews  Review[]

  @@index([ownerId])
  @@index([category])
  @@index([lat, lng])
  @@index([status])
}

model Booking {
  id        String        @id @default(cuid())
  listingId String
  renterId  String
  startDate DateTime
  endDate   DateTime
  status    BookingStatus @default(RESERVED)
  deposit   Int
  insurance Boolean       @default(false)
  expiresAt DateTime?
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  listing    Listing     @relation(fields: [listingId], references: [id])
  renter     User        @relation("BookingRenter", fields: [renterId], references: [id])
  messages   Message[]
  disputes   Dispute[]
  checklists Checklist[]
  thread     Thread?

  @@index([listingId])
  @@index([renterId])
  @@index([status])
}

model Thread {
  id            String   @id @default(cuid())
  bookingId     String   @unique
  lastMessageAt DateTime @default(now())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  booking  Booking   @relation(fields: [bookingId], references: [id])
  messages Message[]

  @@index([bookingId])
  @@index([lastMessageAt])
}

model Message {
  id         String   @id @default(cuid())
  threadId   String?
  bookingId  String
  fromUserId String
  body       String
  images     String? // JSON array of image URLs
  createdAt  DateTime @default(now())

  thread   Thread? @relation(fields: [threadId], references: [id])
  booking  Booking @relation(fields: [bookingId], references: [id])
  fromUser User    @relation("MessageFrom", fields: [fromUserId], references: [id])

  @@index([bookingId])
  @@index([threadId])
  @@index([createdAt])
}

model Review {
  id         String   @id @default(cuid())
  listingId  String
  fromUserId String
  toUserId   String
  rating     Int // 1-5
  text       String?
  createdAt  DateTime @default(now())

  listing  Listing @relation(fields: [listingId], references: [id])
  fromUser User    @relation("ReviewFrom", fields: [fromUserId], references: [id])
  toUser   User    @relation("ReviewTo", fields: [toUserId], references: [id])

  @@index([listingId])
  @@index([toUserId])
}

model Dispute {
  id          String        @id @default(cuid())
  bookingId   String
  openedById  String?
  type        DisputeType?
  description String?
  status      DisputeStatus @default(OPEN)
  claim       Int
  evidence    String // JSON object with evidence data
  notes       String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  booking  Booking @relation(fields: [bookingId], references: [id])
  openedBy User?   @relation("DisputeOpener", fields: [openedById], references: [id])

  @@index([bookingId])
  @@index([status])
}

model Checklist {
  id             String         @id @default(cuid())
  bookingId      String
  phase          ChecklistPhase
  photos         String // JSON array of photo URLs
  serial         String?
  conditionNotes String?
  signedAt       DateTime?
  createdAt      DateTime       @default(now())

  booking Booking @relation(fields: [bookingId], references: [id])

  @@index([bookingId])
}

model AdminSettings {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String // JSON string for complex values
  updatedAt DateTime @updatedAt
  updatedBy String? // User ID who last updated

  @@index([key])
}

model Rules {
  id                    String   @id @default("1")
  baseDepositPct        Float    @default(0.1)
  minDeposit            Int      @default(100)
  maxDeposit            Int      @default(10000)
  insuranceDaily        Int      @default(50)
  incidentMultiplier    Float    @default(1.5)
  ownerTrustMultiplier  Float    @default(1.0)
  renterTrustMultiplier Float    @default(1.0)
  updatedAt             DateTime @updatedAt
}

model AuditLog {
  id        String   @id @default(cuid())
  actorId   String
  action    String
  entity    String
  entityId  String
  data      String? // JSON string for additional data
  createdAt DateTime @default(now())

  @@index([actorId])
  @@index([entity, entityId])
  @@index([createdAt])
}
